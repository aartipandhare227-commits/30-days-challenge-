def find_subarrays_with_zero_sum(arr):
    result = []
    n = len(arr)
    
    for i in range(n):
        curr_sum = 0
        for j in range(i, n):
            curr_sum += arr[j]
            if curr_sum == 0:
                result.append((i, j))
    
    return result

arr = [1, 2, -3, 3, -1, 2]
print("Zero-sum subarrays:", find_subarrays_with_zero_sum(arr))